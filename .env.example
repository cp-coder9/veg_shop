# ==============================================
# DOCKER COMPOSE ENVIRONMENT VARIABLES
# ==============================================
# This file is used by docker-compose.prod.yml
# Copy this to .env and update with your production values

# ==============================================
# POSTGRESQL DATABASE
# ==============================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=change_this_secure_password
POSTGRES_DB=organic_veg_db

# ==============================================
# BACKEND API
# ==============================================
JWT_SECRET=change_this_to_secure_random_string_min_32_chars
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# ==============================================
# WHATSAPP BUSINESS API
# ==============================================
WHATSAPP_API_URL=https://graph.facebook.com/v18.0
WHATSAPP_API_TOKEN=your_whatsapp_token_here
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id_here

# ==============================================
# EMAIL SERVICE (SENDGRID)
# ==============================================
SENDGRID_API_KEY=your_sendgrid_api_key_here
SENDGRID_FROM_EMAIL=noreply@organicveg.com

# ==============================================
# FRONTEND
# ==============================================

# ==============================================
# PAYMENT GATEWAY (YOKO)
# ==============================================
YOKO_SECRET_KEY=sk_test_...
YOKO_PUBLIC_KEY=pk_test_...
# Production API URL (update to your actual domain)
VITE_API_URL=https://api.organicveg.com
