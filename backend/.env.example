# ==============================================
# DATABASE CONFIGURATION
# ==============================================
# PostgreSQL connection string
# Format: postgresql://[user]:[password]@[host]:[port]/[database]?schema=public
# Example for local: postgresql://postgres:postgres@localhost:5432/organic_veg_db?schema=public
# Example for Docker: postgresql://postgres:postgres@postgres:5432/organic_veg_db?schema=public
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/organic_veg_db?schema=public"

# ==============================================
# JWT AUTHENTICATION
# ==============================================
# Secret key for signing JWT tokens (MUST be changed in production)
# Generate a secure random string: openssl rand -base64 32
JWT_SECRET="your-secret-key-change-in-production-use-openssl-rand-base64-32"

# JWT token expiration times
# Access token: Short-lived token for API requests (default: 15 minutes)
JWT_ACCESS_EXPIRY="15m"

# Refresh token: Long-lived token for getting new access tokens (default: 7 days)
JWT_REFRESH_EXPIRY="7d"

# ==============================================
# SERVER CONFIGURATION
# ==============================================
# Port the backend server will listen on
PORT=3000

# Node environment (development, production, test)
NODE_ENV="development"

# CORS allowed origins (comma-separated for multiple origins)
# Example: http://localhost:5173,http://localhost:3000
CORS_ORIGIN="http://localhost:5173"

# ==============================================
# WHATSAPP BUSINESS API
# ==============================================
# WhatsApp Business API endpoint URL
# Get from: https://developers.facebook.com/docs/whatsapp/cloud-api
WHATSAPP_API_URL="https://graph.facebook.com/v18.0"

# WhatsApp Business API access token
# Get from: Facebook Developer Console > WhatsApp > API Setup
WHATSAPP_API_TOKEN=""

# WhatsApp Phone Number ID
# Get from: Facebook Developer Console > WhatsApp > API Setup
WHATSAPP_PHONE_NUMBER_ID=""

# ==============================================
# EMAIL SERVICE (SENDGRID)
# ==============================================
# SendGrid API key for sending emails
# Get from: https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY=""

# Verified sender email address
# Must be verified in SendGrid: https://app.sendgrid.com/settings/sender_auth
SENDGRID_FROM_EMAIL="noreply@organicveg.com"

# ==============================================
# FILE STORAGE
# ==============================================
# Local file storage path for uploads (PDFs, images)
# For production, consider using cloud storage (S3, Google Cloud Storage)
FILE_STORAGE_PATH="./uploads"

# ==============================================
# OPTIONAL: RATE LIMITING
# ==============================================
# Maximum verification codes per hour per contact
RATE_LIMIT_VERIFICATION_CODES=3

# Maximum API requests per minute per user
RATE_LIMIT_API_REQUESTS=100

# Maximum login attempts per hour per contact
RATE_LIMIT_LOGIN_ATTEMPTS=5
