# Production Environment Configuration
# IMPORTANT: Replace all placeholder values with actual production credentials

# Database - Use managed PostgreSQL service (AWS RDS, DigitalOcean, etc.)
DATABASE_URL="postgresql://[USER]:[PASSWORD]@[HOST]:[PORT]/[DATABASE]?schema=public"

# JWT - Generate secure secrets: openssl rand -base64 32
JWT_SECRET="REPLACE_WITH_SECURE_RANDOM_STRING"
JWT_ACCESS_EXPIRY="15m"
JWT_REFRESH_EXPIRY="7d"

# Server
PORT=3000
NODE_ENV="production"
CORS_ORIGIN="https://yourdomain.com"

# WhatsApp Business API
WHATSAPP_API_URL="https://graph.facebook.com/v18.0"
WHATSAPP_API_TOKEN="REPLACE_WITH_WHATSAPP_TOKEN"
WHATSAPP_PHONE_NUMBER_ID="REPLACE_WITH_PHONE_NUMBER_ID"

# SendGrid Email Service
SENDGRID_API_KEY="REPLACE_WITH_SENDGRID_API_KEY"
SENDGRID_FROM_EMAIL="noreply@yourdomain.com"

# File Storage - Consider using S3 or similar cloud storage
FILE_STORAGE_PATH="./uploads"

# Rate Limiting
RATE_LIMIT_VERIFICATION_CODES=3
RATE_LIMIT_API_REQUESTS=100
RATE_LIMIT_LOGIN_ATTEMPTS=5
